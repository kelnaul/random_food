
<div class = "form_row">
  <div class="container s12">
    <%= form_tag search_restaurants_path, method: :get do %>
      <div class = "row">
        <div class = "col s6">
          <%= label :address, "Find a Restaurant near :", class: "label" %>
          <%#= text_field_tag :address, params[:address] %>
          <%= text_field_tag :address %>
          </div>
          <div class = "col s6">
          <%= label :distance, "Distance in miles : ", class: "label" %>
          <%#= text_field_tag :distance, params[:distance] %> 
          <%= text_field_tag :distance %>
        </div>
      </div>
      <div class = "submit_button">
        <%= image_submit_tag("http://i.imgur.com/cyTxMpQ.png?1") %>
      </div>
    <% end %>			  
  </div>
</div>



			 

